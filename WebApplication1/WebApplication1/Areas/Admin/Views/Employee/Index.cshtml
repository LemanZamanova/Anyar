@using WebApplication1.Models
@using WebApplication1.ViewModels
@model List<GetEmployeeVM>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Employee Table</h4>
                <a asp-controller="Employee" asp-action="Create" class="btn btn-success">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                
                                <th>
                                    Image
                                </th>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                    Position
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetEmployeeVM employeeVM in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/assets/img/team/@employeeVM.Image" alt="Alternate Text" />
                                    </td>
                                    <td>
                                        @employeeVM.Name @employeeVM.Surname
                                    </td>
                                  
                                    <td>
                                        @employeeVM.PositionName

                                    </td>

                                    <td>
                                        <a asp-action="update" asp-route-id="@employeeVM.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i></a>
                                        <a asp-action="delete" asp-route-id="@employeeVM.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="detail" asp-route-id="@employeeVM.Id" class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>